<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.ytazwc.alibaba.mapper.InventoryMapper">

    <update id="updateInventory">
        update inventory_tbl
        <set>
            <if test="used != null">
                used = #{used},
            </if>
            <if test="residue != null">
                residue = #{residue},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="findByProductId" resultType="top.ytazwc.alibaba.bean.Inventory">
        SELECT id, product_id, total, used, residue, create_time, update_time
        FROM inventory_tbl i
        WHERE product_id = #{productId}
    </select>



</mapper>